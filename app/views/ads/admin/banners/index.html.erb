<h1><%= t('activerecord.models.ads/banner', count: 3) %></h1>
<%= link_to t('new_model', model: t('activerecord.models.ads/banner', count: 1)), new_admin_banner_path, class:'button' %>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th><%= Ads::Banner.human_attribute_name('name') %></th>
      <th><%= Ads::Banner.human_attribute_name('width') %></th>
      <th><%= Ads::Banner.human_attribute_name('height') %></th>
      <th colspan="3"><%= t('actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @banners.each do |banner| %>
      <tr>
        <td><%= banner.id %></td>
        <td><%= banner.name %></td>
        <td><%= banner.width %></td>
        <td><%= banner.height %></td>
        <td><%= link_to t('show'), [:admin, banner], class:'button green small' %></td>
        <td><%= link_to t('edit'), edit_admin_banner_path(banner), class:'button blue small' %></td>
        <td><%= link_to t('destroy'), [:admin, banner], class:'button red small', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
