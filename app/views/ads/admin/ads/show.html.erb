<% if notice.present? %>
<p id="notice"><%= notice %></p>
<% end %>
<h2><%= @ad.banner.name %></h2>
<%= image_tag @ad.file.url %>

<table class="table table-show">
  <tr>
    <th>name</th>
    <td><%= @ad.banner.name %></td>
  </tr>
  <tr>
    <th>Link</th>
    <td><%= @ad.link %></td>
  </tr>
  <tr>
    <th>Display count</th>
    <td><%= @ad.display_count %></td>
  </tr>
  <tr>
    <th>Start Date</th>
    <td><%= @ad.start_date %></td>
  </tr>
  <tr>
    <th>End Date</th>
    <td><%= @ad.end_date %></td>
  </tr>
  <tr>
    <th>Disable</th>
    <td><%= @ad.disable %></td>
  </tr>
</table>

<%= link_to 'Edit', edit_admin_campaign_ad_path(@campaign, @ad), class:'button blue' %>
<%= link_to 'Back', admin_campaign_ads_path, class:'button' %>
