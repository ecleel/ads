<h1><%= t('activerecord.models.ads/campaign.few') %></h1>
<%= link_to t('new_model', model: t('activerecord.models.ads/campaign.one')),
            new_admin_campaign_path, class:'button' %>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th><%= Ads::Campaign.human_attribute_name('name') %></th>
      <th><%= Ads::Campaign.human_attribute_name('advertiser') %></th>
      <th colspan="3"><%= t('actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.id %></td>
        <td><%= campaign.name %></td>
        <td><%= campaign.advertiser %></td>
        <td><%= link_to t('show'), [:admin, campaign], class:'button green small' %></td>
        <td><%= link_to t('edit'), edit_admin_campaign_path(campaign), class:'button blue small' %></td>
        <td><%= link_to t('destroy'), [:admin, campaign], class:'button red small', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
